<!DOCTYPE HTML>
<HTML>
	<HEAD>
		<META CHARSET='UTF-8'/>
		<TITLE>iData</TITLE>
		<script src="rel/jquery-1.11.0-beta3.js"></script>
	</HEAD>
	<BODY>
		<H1> I WANT TO GET DATAS! </H1>
		<FORM>
			<INPUT id='txt_webSite' type='text' value ='www.china-designer.com/  ' style="width:500px;" autofocus required/>
			<INPUT type='button' value='submit' onClick='getData();' style="width:100px;" />
		</FORM>
	<!--post提交数据的方式-->
	<script>

	function getData(){
		param = checkVail($("#txt_webSite").val());
		window.location.href("index.php?param="+param);
	};

	function checkVail(str){
		strValue = encodeURI(str);
		return strValue;
	}
	</script>
	</BODY>
</HTML>

